# live databases machine

set -e

# Mount encrypted volume with databases content as /var.
mount /dev/xvdf /var

# Complete configuration with runtime information.
/tmp/ansible/bin/python /tmp/ansible/reps/drop/src/dservices.py -DldapHost=dbs.{{tag_prefix}}ec2.internal -DdomainName={{domain_name}} -DldapPasswordHash="{{ldapPasswordHash}}" /tmp/ansible/reps/drop/share/tero/databases.xml
